<Window x:Class="EventHubsReceiver.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventHubsReceiver.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" 
          Height="430" 
          HorizontalAlignment="Left" 
          Name="eventDataGrid" 
          VerticalAlignment="Top" 
          Width="800">
            <DataGrid.Columns >
                <DataGridTextColumn Binding="{Binding Path=OperationName}" MinWidth="100" />
                <DataGridTextColumn Binding="{Binding Path=Status}" MinWidth="50" />
                <DataGridTextColumn Binding="{Binding Path=Time}" MinWidth="50" />
                <DataGridTextColumn Binding="{Binding Path=TimeStamp}" MinWidth="50" />
                <DataGridTextColumn Binding="{Binding Path=Subscription}" MinWidth="100" />
                <DataGridTextColumn Binding="{Binding Path=InitiatedBy}" MinWidth="75" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
